<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.StartGameFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/player_matrix"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/create_game_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Create new game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/player_matrix"
        app:layout_constraintTop_toBottomOf="@+id/constructionLayout" />

    <Button
        android:id="@+id/connect_game_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/player_matrix"
        app:layout_constraintTop_toBottomOf="@+id/create_game_btn"
        app:layout_constraintVertical_bias="0.217" />

    <LinearLayout
        android:id="@+id/constructionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_matrix"
        app:layout_constraintTop_toTopOf="@+id/player_matrix"
        tools:context=".ConstructionFragment">

        <ImageButton
            android:id="@+id/buttonShip4Horizontal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:contentDescription="Ship 4 Horizontal"
            android:scaleType="center"
            android:src="@drawable/battleships_ship_4_horizontal" />

        <ImageButton
            android:id="@+id/buttonShip4Vertical"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:contentDescription="Ship 4 Vertical"
            android:scaleType="center"
            android:src="@drawable/battleships_ship_4_vertical" />

        <ImageButton
            android:id="@+id/buttonShip3Horizontal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:contentDescription="Ship 3 Horizontal"
            android:scaleType="center"
            android:src="@drawable/battleships_ship_3_horizontal" />

        <ImageButton
            android:id="@+id/buttonShip3Vertical"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:contentDescription="Ship 3 Vertical"
            android:scaleType="center"
            android:src="@drawable/battleships_ship_3_vertical" />

        <ImageButton
            android:id="@+id/buttonShip2Horizontal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:contentDescription="Ship 2 Horizontal"
            android:scaleType="center"
            android:src="@drawable/battleships_ship_2_horizontal" />

        <ImageButton
            android:id="@+id/buttonShip2Vertical"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:contentDescription="Ship 2 Vertical"
            android:scaleType="center"
            android:src="@drawable/battleships_ship_2_vertical" />

        <ImageButton
            android:id="@+id/buttonShip1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:contentDescription="Ship 1"
            android:scaleType="center"
            android:src="@drawable/battleships_ship_1" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>